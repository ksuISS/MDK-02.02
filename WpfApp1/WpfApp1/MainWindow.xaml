<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="396">
    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="366" Stroke="Black" VerticalAlignment="Center" Width="377" Fill="#FFE4D1F3"/>
        <Label FontSize="20" Content="Выберите ваш тариф" HorizontalAlignment="Left" Margin="76,34,0,0" VerticalAlignment="Top"/>
        <ComboBox FontSize="20" x:Name="tarif" HorizontalAlignment="Left" Margin="82,76,0,0" VerticalAlignment="Top" Width="197">
            <ComboBoxItem Content="1 тариф"/>
            <ComboBoxItem Content="2 тариф"/>
        </ComboBox>
        <Label FontSize="20" Content="Введите количество минут" HorizontalAlignment="Left" Margin="82,114,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="min" FontSize="20" HorizontalAlignment="Left" Margin="82,156,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="197" PreviewTextInput="min_PreviewTextInput"/>
        <Button FontSize="20" Content="Рассчитать" HorizontalAlignment="Left" Margin="121,298,0,0" VerticalAlignment="Top" Height="35" Width="119" Background="#FFD6A7FA" Click="Button_Click"/>
        <Button FontSize="20" Content="Квитанция" HorizontalAlignment="Left" Margin="121,351,0,0" VerticalAlignment="Top" Height="35" Width="119" Background="#FFD6A7FA" Click="Button_Click_1"/>
        <Label x:Name="oplata" FontSize="20" Content="К оплате: " HorizontalAlignment="Left" Margin="82,0,0,0" VerticalAlignment="Center"/>
        <Label x:Name="overmin" FontSize="20" Content="Минут сверхнормы:" HorizontalAlignment="Left" Margin="82,240,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
